<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aredevelopments.scorecard" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@mipmap/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartupScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewGame"
            android:label="@string/title_activity_new_game" >
        </activity>
        <activity
            android:name=".StartFreshGame"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_start_fresh_game" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aredevelopments.scorecard.StartupScreen" />
        </activity>
        <activity
            android:name=".CurrentGameScorecard"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_current_game_scorecard" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aredevelopments.scorecard.GameHistory" />
        </activity>
        <activity
            android:name=".GameHistory"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game_history" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aredevelopments.scorecard.StartupScreen" />
        </activity>
        <activity
            android:name=".GameDetails"
            android:label="@string/title_activity_game_details" >
        </activity>
        <activity
            android:name=".GameContinuity"
            android:label="@string/title_activity_game_continuity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aredevelopments.scorecard.GameHistory" />
        </activity>
        <activity
            android:name=".AboutGame"
            android:label="@string/title_activity_about_game" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aredevelopments.scorecard.StartupScreen" />
        </activity>
        <activity
            android:name=".Help"
            android:label="@string/title_activity_help" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aredevelopments.scorecard.StartupScreen" />
        </activity>
    </application>

</manifest>
