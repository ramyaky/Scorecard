<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="1dip" android:color="#85D3EF" />
            <gradient android:angle="-90" android:startColor="#85D3EF" android:endColor="#85D3EF" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="1dip" android:color="#5faed9" />
            <solid android:color="#5faed9"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="1dip" android:color="#5faed9" />
            <gradient android:angle="-90" android:startColor="#5faed9" android:endColor="#5faed9" />
        </shape>
    </item>
</selector>