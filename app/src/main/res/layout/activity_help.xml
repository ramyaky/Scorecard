<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aredevelopments.scorecard.Help">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/helpscroll"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Scorecard Instructions"
                android:layout_marginTop="10dp"
                android:textStyle="bold|italic"
                android:textSize="25dp"
                android:textColor="@color/apptheme_color"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/textView"
                android:layout_marginTop="20dp"
                android:id="@+id/q1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:src="@drawable/arrow"
                    />

                <TextView
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text=" Starting a new game"/>


            </LinearLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/a1"
                android:layout_below="@+id/q1">

                <TableRow
                    android:textAlignment="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center"
                        android:layout_column="1"
                        android:src="@drawable/dot"/>

                    <TextView android:layout_column="2"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Enter game name" />
                </TableRow>
                <TableRow>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center"
                        android:layout_column="1"
                        android:src="@drawable/dot"/>

                    <TextView
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Select game mode [min/max].If mode is 'min', enter the maximun 'limit' value the player can score before the player looses the game." />
                </TableRow>
                <TableRow>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:layout_column="1"
                        android:src="@drawable/dot"/>
                    <TextView android:layout_column="2"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Add players" />
                </TableRow>
                <TableRow>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:layout_column="1"
                        android:src="@drawable/dot"/>
                    <TextView android:layout_column="2"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Start game" />
                </TableRow>


            </TableLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/a1"
                android:layout_marginTop="20dp"
                android:id="@+id/q2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:src="@drawable/arrow"
                    />

                <TextView
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text=" What is Min/Max ?"/>


            </LinearLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/a2"
                android:layout_below="@+id/q2">

                <TableRow
                    android:textAlignment="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_column="1"
                        android:src="@drawable/dot"/>

                    <TextView android:layout_column="2"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Max: player who scores max is winner" />
                </TableRow>
                <TableRow
                    android:textAlignment="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:layout_column="1"
                        android:src="@drawable/dot"/>

                    <TextView android:layout_column="2"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Min(Limit):You need set a limit for min mode. Limit is used for eliminating player crossing limit. e.g.: rummy, where player is eliminated after 101 or 201" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/a2"
                android:layout_marginTop="20dp"
                android:id="@+id/q3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:src="@drawable/arrow"
                    />

                <TextView
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text=" Resuming a previous game"/>
            </LinearLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/a3"
                android:layout_below="@+id/q3">

                <TableRow
                    android:textAlignment="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:layout_column="1"
                        android:src="@drawable/dot"/>

                    <TextView android:layout_column="2"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Go to history, select a game to resume " />
                </TableRow>


            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/a3"
                android:layout_marginTop="20dp"
                android:id="@+id/q4">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:src="@drawable/arrow"
                    />

                <TextView
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text=" Clone a game "/>
            </LinearLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/a4"
                android:layout_below="@+id/q4">

                <TableRow
                    android:textAlignment="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_column="1"
                        android:src="@drawable/dot"/>

                    <TextView android:layout_column="2"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Go to history, look or search for previously played game, hit clone. " />
                </TableRow>
                <TableRow
                    android:textAlignment="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:layout_column="1"
                        android:src="@drawable/dot"/>

                    <TextView android:layout_column="2"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Now you have options to name and add players or continue with cloned game players." />
                </TableRow>

            </TableLayout>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
